<% content_for :page_title do
@post.title
end %>
<% cache @post do %>


<article class="center mw5 mw6-ns hidden ba mv4">
  <h1 class="f4 bg-near-black white mv0 pv2 ph3"><%= @post.title %></h1>
  <div class="pa3 bt">
    <p class="f6 f5-ns lh-copy measure mv0">
      
    <p>
      <strong>Contact Info:</strong>
      <%= @post.contact %>
    </p>
    <p><i>Posted at <%= (@post.created_at+12*60*60).strftime('%H:%M %a %d %b %Y') %></i></p>
    <hr>
    <p>
      <%= @post.content.html_safe %>
    </p>
    <% unless @post.postpic_url.nil? %>
    <hr><h4>Attached Image</h4>
    <%= image_tag @post.postpic_url(:standard) %><br /><% end %>
    <br>
    
    <!-- Buttons end here -->
    <p>
      <strong>Category:</strong>
      <%= @post.category %>
    </p>
    </p>
  </div>
</article>

    <div align="center">
      <%= link_to 'Back', posts_path, class: "btn btn-block btn-default" %><br>
    </div>

  <% end %>