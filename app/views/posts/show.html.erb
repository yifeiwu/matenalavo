<p id="notice"><%= notice %></p>


<% content_for :page_title do
  @post.title
end %>

<div class="container">
<div class='col-xs-12 col-md-8 col-md-offset-2'>

  <h3><strong>
  <%= @post.title %></strong>
  </h3>



<p>
  <strong>Contact Info:</strong>
  <%= @post.contact %>
</p>
<hr>
<p>
  <strong></strong>
  <%= @post.content.html_safe %>
</p>



<% unless @post.postpic_url.nil? %>
<hr><h4>Attached Image</h4>
<%= image_tag @post.postpic_url(:standard) %><br /><% end %>
<br>
<b>Share This Ad</b>
<%= social_share_button_tag(@post.title) %>
<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>
<hr>

<div>
<h4>Similar Posts</h4>

<table class="table table-striped table-hover ">
<col width="25%">
  <col width="25%">
  <col width="50%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>

  <% @similar_posts.each do |post| %>
      <tr>
        <td><%= (post.created_at+12*60*60).strftime('%H:%M %a %d %b %Y') %> </td>
        <td><%= post.category %> </td>
        <td><%= link_to(post.title, post_path(post)) %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>


<hr>
<div align="center">
<%= link_to 'Back', posts_path, class: "btn btn-block btn-default" %>
</div>
</div>