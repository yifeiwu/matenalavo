  <div class="field">
    <%= f.label :contact %><br>
    <%= f.text_field :contact, style: 'width: 400px'  %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Post::POST_TYPES,{},:class =>"form-control", style: 'width: 400px'  %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, style: 'width: 400px' , rows:10 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>
</div>
