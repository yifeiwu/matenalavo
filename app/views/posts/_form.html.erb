<div class='row'>
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='col-md-4'>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, style: 'width: 400px', :placeholder => "Headline for your ad"  %>
  </div>
  <div class="field">
    <%= f.label :contact %><br>
    <%= f.text_field :contact, style: 'width: 400px', :placeholder => "Phone and/or email address"  %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Post::POST_TYPES,{},:class =>"form-control", style: 'width: 400px'  %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, style: 'width: 400px' , rows:10, :placeholder => "Your main content goes here. Please include details such as your location(Suva,Nadi,Lautoka,SavuSavu etc)"%>
  </div>
<hr><h5>Upload a picture</h5>
<%= f.file_field :postpic %>
<hr>

  <div class="actions">
    <%= f.submit "Post my Ad" %>
  </div>
  </div>
<% end %>
</div>
