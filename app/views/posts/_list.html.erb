<%# app/views/students/_list.html.erb %>

<table class="table table-striped table-hover ">
<col width="25%">
  <col width="25%">
  <col width="50%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>




    <% posts.each do |post| %>
      <tr>
        <td><%= (post.created_at+12*60*60).strftime('%H:%M %a %d %b %Y') %> </td>
        <td><%= post.category %> </td>
        <td><%= link_to(post.title, post_path(post)) %></td>
      </tr>
    <% end %>





</tbody>
</table>
<%= paginate @posts %>

